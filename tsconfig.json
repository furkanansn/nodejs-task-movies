{
  "compilerOptions": {
    "lib": ["ES2015", "ES6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "__test__/**/*", ".eslintrc.js", "ormconfig.js", "version.js"]
}
